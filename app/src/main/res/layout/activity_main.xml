<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ly_bt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/basicmap"
                    android:background="@drawable/button_main"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="标准地图"/>
                <Button
                    android:id="@+id/rsmap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="卫星地图"/>
                <Button
                    android:id="@+id/nightmap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="夜间模式"/>
                <Button
                    android:id="@+id/navimap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="导航模式"/>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_bt"
                android:layout_marginTop="5dp"
                android:src="@drawable/float_down"
                app:backgroundTint="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_compass"
        android:clickable="true"
        android:src="@drawable/compass"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="55dp"
        android:scaleType="fitXY"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|start" />

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_white"
        app:behavior_hideable="false"
        app:behavior_peekHeight="50dp"
        app:behavior_fitToContents="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/chouti"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tx"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="查看更多功能" />
        <LinearLayout
            android:id="@+id/bt_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/bt_rute"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mark_main"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_rute"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="路线规划" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <Button
                    android:id="@+id/bt_poi"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/poi_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_poi"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="poi查找" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <Button
                    android:id="@+id/bt_weather"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/weather_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_weather"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="天气查询" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">
                <Button
                    android:id="@+id/bt_marker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/daohang2_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_marker"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="导航" />
            </RelativeLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/background_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/day_card"
            android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/city_name_weather_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="当前地区天气"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:layout_marginTop="35dp">
                <TextView
                    android:id="@+id/weather_this_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="35sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#FFFFFF"/>

                <ImageView
                    android:id="@+id/card_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather3" />
                <TextView
                    android:id="@+id/temp_card"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="45sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="115dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingLeft="45dp"
                    android:layout_marginTop="0dp">
                    <TextView
                        android:id="@+id/wind"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
