<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ly_bt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/basicmap"
                    android:background="@drawable/button_main"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="标准地图"/>
                <Button
                    android:id="@+id/rsmap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="卫星地图"/>
                <Button
                    android:id="@+id/nightmap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="夜间模式"/>
                <Button
                    android:id="@+id/navimap"
                    android:background="@drawable/button_main"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="导航模式"/>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_bt"
                android:layout_marginTop="5dp"
                android:src="@drawable/float_down"
                app:backgroundTint="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_compass"
        android:clickable="true"
        android:src="@drawable/compass"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="55dp"
        android:scaleType="fitXY"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|start" />

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        android:background="@drawable/shape_white"
        app:behavior_hideable="false"
        app:behavior_peekHeight="50dp"
        app:behavior_fitToContents="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/chouti"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tx"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="查看更多功能" />
        <LinearLayout
            android:id="@+id/bt_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/bt_rute"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mark_main"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_rute"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="路线规划" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <Button
                    android:id="@+id/bt_poi"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/poi_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_poi"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="poi查找" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">
                <Button
                    android:id="@+id/bt_weather"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/weather_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_weather"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="天气查询" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">
                <Button
                    android:id="@+id/bt_navigation"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/daohang2_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:lineSpacingExtra="20dp"/>

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_navigation"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="导航" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>